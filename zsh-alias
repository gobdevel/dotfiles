# Docker function
function start_dev {
  curr_dir=$(basename $(pwd))
  if [ "$curr_dir" != "leblon" -a "$curr_dir" != "aos" ]; then
    echo "Must run from leblon or aos directory"
    return 1
  fi

  if [ -z "$1" ]; then
    echo "Usage start_dev <name>"
    return 1
  else
    ./tools/start_aos_dev_container --docker-run-options="-v $HOME/bootcamp/tacc_bootcamp:/bootcamp" -n $1
  fi
}

function start_dev_local {
  curr_dir=$(basename $(pwd))
  if [ "$curr_dir" != "leblon" -a "$curr_dir" != "aos" ]; then
    echo "Must run from leblon or aos directory"
    return 1
  fi

  if [[ $# -ne 2 ]]; then
    echo "Usage start_dev <name> <image:tag>"
    return 1
  else
    ./tools/start_aos_dev_container --docker-run-options="-v $HOME/bootcamp/tacc_bootcamp:/bootcamp" -n $1 --docker-image="$2"
  fi
}

function re_cont {
  curr_dir=$(basename $(pwd))
  if [ "$curr_dir" != "leblon" -a "$curr_dir" != "aos" ]; then
    echo "Must run from leblon or aos directory"
    return 1
  fi

  container_name="$(dirname "$curr_dir")"
  docker rm "$container_name"
  start_dev "$container_name"
}
