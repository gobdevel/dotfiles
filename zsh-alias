#}

# Docker function
function start_dev {
	curr_dir=$(basename $(pwd))
	if [ "$curr_dir" != "leblon" -a "$curr_dir" != "aos" ]; then
		echo "Must run from leblon or aos directory"
		return 1
	fi

	if [ -z "$1" ]; then
		echo "Usage start_dev <name>"
		return 1
	else
		./tools/start_aos_dev_container --docker-run-options="-v $HOME/Apstra/tacc_bootcamp:/bootcamp" -n $1
	fi
}
